{
  "name": "syncspace",
  "license": "MIT",
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "format-and-lint": "turbo format-and-lint --continue --",
    "format-and-lint:fix": "turbo format-and-lint:fix --continue --",
    "ui": "pnpm --filter @syncspace/ui ui",
    "db:migrate": "turbo db:migrate",
    "db:studio": "turbo db:studio",
    "db:generate": "turbo db:generate",
    "prepare": "husky"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@syncspace/database": "workspace:*",
    "@syncspace/ui": "workspace:*",
    "husky": "^9.1.7",
    "prettier": "catalog:",
    "turbo": "2.1.1"
  },
  "packageManager": "pnpm@9.12.0",
  "engines": {
    "node": ">=20.17.0"
  },
  "volta": {
    "node": "20.17.0",
    "pnpm": "9.12.0"
  }
}
